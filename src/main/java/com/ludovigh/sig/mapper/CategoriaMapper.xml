<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ludovigh.sig.imapper.CategoriaMapper">
	<select id="getAllCategorias" resultType="Categoria">
		select * from categoria
	</select>
	<select id="getCategoriaById" parameterType="int" resultType="Categoria">
		select * from categoria where id = #{id}
	</select>

	<insert id="insertarCategoria" useGeneratedKeys="true"
		parameterType="Categoria">
		insert into categoria
		(cedula_ruc,nombrecia,nombrecontacto,direccioncli,email)
		values
		(#{categoria.cedula_ruc},#{categoria.nombrecia},#{categoria.nombrecontacto},#{categoria.direccioncli},#{categoria.email})
	</insert>

	<update id="updateCategoria" parameterType="Categoria">
		update categoria set
		cedula_ruc = #{categoria.cedula_ruc},
		nombrecia = #{categoria.nombrecia},
		nombrecontacto = #{categoria.nombrecontacto},
		email = #{categoria.email},
		direccioncli = #{categoria.direccioncli}
		where id = #{id}
	</update>
	<delete id="deleteCategoria">
		delete from categoria where id =
		#{id}
	</delete>

</mapper>